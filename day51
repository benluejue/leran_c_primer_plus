switch需要多多练习
case前门不要乱加东西
int code;
	//printf("%d",menu());

	while ((code=menu()) != quit)
	{
		//printf("you press\n");
		switch (code)
		{
		case 1:printf("you pase on 1"); 
			break;
		case 2:printf("you pase on 2"); 
			break;
		case 3:printf("you pase on 3");
			break;
		default:printf("   ");
			break;
		}
	}
